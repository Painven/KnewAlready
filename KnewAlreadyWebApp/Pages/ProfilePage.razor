@page "/profile"
<PageTitle>Настройки пользователя</PageTitle>

<h1>Профиль</h1>

<div class="container">
    <div class="profile-box">
        <div>
            <img src="https://png.pngtree.com/png-vector/20210604/ourmid/pngtree-gray-avatar-placeholder-png-image_3416697.jpg" />
            <label>Имя пользователя</label>
            <input type="text" class="form-control" readonly />
        </div>
        <div>
            <img src="https://png.pngtree.com/png-vector/20210604/ourmid/pngtree-gray-avatar-placeholder-png-image_3416697.jpg" />
            <label>Email</label>
            <input type="text" class="form-control" />
        </div>
        <div>
            <img src="https://png.pngtree.com/png-vector/20210604/ourmid/pngtree-gray-avatar-placeholder-png-image_3416697.jpg" />
            <label>Telegram</label>
            <input type="text" class="form-control" />
        </div>
    </div>
    <button class="btn btn-lg btn-success p-2 mt-3 w-100">
        Сохранить
    </button>
</div>

<style>
    .profile-box {
        display: flex;
        flex-direction: row;
        justify-content: center;
        gap: 8px;
    }

        .profile-box > div {
            flex: 1;
        }

        .profile-box img {
            width: 42px;
            height: 42px;
            margin: 42px;
        }
</style>

